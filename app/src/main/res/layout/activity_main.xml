<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <!-- todo: extract hardcoded dimensions -->
        <!-- todo: add borders around each section -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pianoContainer"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            app:layout_constraintTop_toTopOf="parent">

            <com.convergencelabstfx.pianoview.PianoView
                android:id="@+id/piano"
                android:layout_width="300dp"
                android:layout_height="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/pianoContainer" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/divider_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <!-- todo: wasn't scrolling to the end, so I added 300dp of padding -->
            <LinearLayout
                android:id="@+id/settings_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="300dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/itemRow_height">

                    <com.google.android.material.slider.Slider
                        android:id="@+id/pianoWidth_slider"
                        android:layout_width="@dimen/slider_width"
                        android:layout_height="@dimen/slider_height"
                        android:layout_marginStart="@dimen/small_margin"
                        android:stepSize="1"
                        android:value="280"
                        android:valueFrom="100"
                        android:valueTo="320"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/pianoWidth_label"
                        android:layout_width="@dimen/slider_width"
                        android:layout_height="@dimen/label_height"
                        android:layout_marginEnd="@dimen/small_margin"
                        android:gravity="center"
                        android:text="Piano Width"
                        android:textSize="@dimen/label_text_size"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- todo: extract hardcoded values -->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/itemRow_height">

                    <com.google.android.material.slider.Slider
                        android:id="@+id/pianoHeight_slider"
                        android:layout_width="@dimen/slider_width"
                        android:layout_height="@dimen/slider_height"
                        android:layout_marginStart="@dimen/small_margin"
                        android:stepSize="1"
                        android:value="200"
                        android:valueFrom="80"
                        android:valueTo="260"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/pianoHeight_label"
                        android:layout_width="@dimen/slider_width"
                        android:layout_height="@dimen/label_height"
                        android:layout_marginEnd="@dimen/small_margin"
                        android:gravity="center"
                        android:text="Piano Height"
                        android:textSize="@dimen/label_text_size"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/divider_margin"
                    android:layout_marginBottom="@dimen/divider_margin"
                    android:background="@android:color/darker_gray" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/itemRow_height">

                    <TextView
                        android:id="@+id/colorChooser_label"
                        android:layout_width="@dimen/slider_width"
                        android:layout_height="@dimen/label_height"
                        android:layout_marginStart="@dimen/small_margin"
                        android:gravity="center"
                        android:text="@string/color_chooser"
                        android:textSize="@dimen/label_text_size"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/whiteKeyColor_toggle"
                        android:layout_width="@dimen/slider_width"
                        android:layout_height="@dimen/toggleButton_height"
                        android:layout_marginEnd="@dimen/small_margin"
                        android:backgroundTint="@color/inactiveButtonTint"
                        android:text="White Key Color"
                        android:textOff="@string/white_key_color_button"
                        android:textOn="@string/white_key_color_button"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/itemRow_height">

                    <com.google.android.material.slider.Slider
                        android:id="@+id/red_slider"
                        android:layout_width="@dimen/slider_width"
                        android:layout_height="@dimen/slider_height"
                        android:layout_marginStart="@dimen/small_margin"
                        android:theme="@style/PianoColorSliderStyle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/blackKeyColor_toggle"
                        android:layout_width="@dimen/slider_width"
                        android:layout_height="@dimen/toggleButton_height"
                        android:layout_marginEnd="@dimen/small_margin"
                        android:backgroundTint="@color/inactiveButtonTint"
                        android:text="Black Key Color"
                        android:textOff="black"
                        android:textOn="black"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/itemRow_height">

                    <com.google.android.material.slider.Slider
                        android:id="@+id/green_slider"
                        android:layout_width="@dimen/slider_width"
                        android:layout_height="@dimen/slider_height"
                        android:layout_marginStart="@dimen/small_margin"
                        android:theme="@style/PianoColorSliderStyle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/pressedKeyColor_toggle"
                        android:layout_width="@dimen/slider_width"
                        android:layout_height="@dimen/toggleButton_height"
                        android:layout_marginEnd="@dimen/small_margin"
                        android:backgroundTint="@color/inactiveButtonTint"
                        android:text="Key Press Color"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/itemRow_height">

                    <com.google.android.material.slider.Slider
                        android:id="@+id/blue_slider"
                        android:layout_width="@dimen/slider_width"
                        android:layout_height="@dimen/slider_height"
                        android:layout_marginStart="@dimen/small_margin"
                        android:theme="@style/PianoColorSliderStyle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/keyStrokeColor_toggle"
                        android:layout_width="@dimen/slider_width"
                        android:layout_height="@dimen/toggleButton_height"
                        android:layout_marginEnd="@dimen/small_margin"
                        android:backgroundTint="@color/inactiveButtonTint"
                        android:text="Key Stroke Color"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/divider_margin"
                    android:layout_marginBottom="@dimen/divider_margin"
                    android:background="@android:color/darker_gray" />


            </LinearLayout>


        </ScrollView>


        <!--
             view width
             view height
             black key width slider
             black key height slider
             number of keys slider

             corner radius slider
             stroke width slider
             enable multi touch
             highlight dropdown

        -->


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>